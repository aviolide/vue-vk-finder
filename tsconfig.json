{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "es7",
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictBindCallApply": true,
    "allowJs": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "isolatedModules": false,
    "baseUrl": "src",
    "types": [
      "reflect-metadata",
      "@types/node",
      "@types/mocha",
      "@types/chrome"
    ],
    "forceConsistentCasingInFileNames": true,
//    "noEmit": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
